# Environment Variables for Social Auth Service
SECRET_KEY=your-secret-key-here-change-in-production
JWT_SECRET_KEY=your-jwt-secret-key-here-change-in-production

# Database Configuration
DATABASE_URL=sqlite:///social_auth.db

# Super Admin Configuration (Pre-configured)
SUPER_ADMIN_EMAIL=admin@smartvillage.com
SUPER_ADMIN_GOOGLE_ID=
SUPER_ADMIN_LINE_ID=
SUPER_ADMIN_FACEBOOK_ID=

# Social Login Configuration
# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# LINE Login
LINE_CHANNEL_ID=your-line-channel-id
LINE_CHANNEL_SECRET=your-line-channel-secret

# Facebook Login
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=True

